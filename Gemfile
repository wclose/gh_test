# Setting source location
source "https://rubygems.org"

# Pulling in files needed for compiling on GitHub Pages and checking locally
gem "github-pages", group: :jekyll_plugins
# Pulling in files for using HTML-proofer during build testing with Travis CI
gem "html-proofer"
# Adding ability to use a remote theme
gem "jekyll-remote-theme"

# Windows does not include zoneinfo files, so bundle the tzinfo-data gem
gem "tzinfo-data", platforms: [:mingw, :mswin, :x64_mingw, :jruby]